{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ditto/api-interfaces": [
        "libs/api-interfaces/src/index.ts"
      ],
      "@ditto/build-logic": [
        "libs/build-logic/src/index.ts"
      ],
      "@ditto/data-source": [
        "libs/data-source/src/index.ts"
      ],
      "@ditto/firebase": [
        "libs/firebase/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
